<div class="container my-5">
    <h1 class="display-4 my-title"><b>Add comments to your code</b></h1>
    <p>
        Type your code below to add comments.
    </p>
    <form action="/gpt" method="post">
        <div class="mb-3">
            <label for="code" class="form-label">Code:</label>
            <textarea type="text" class="form-control" name="code" id="code" aria-describedby="code"
                rows="10"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<div class="table-responsive">
    <table class="table table-striped table-hover fs-6 table-bordered">
        <thead>
            <tr>
                <th>Prompt</th>
                <th>Answer</th>
                <th>delete</th>
            </tr>
        </thead>
        <tbody>
            <% gptItems.forEach(gpt=> { %>
                <tr>
                    <td>
                        <pre><%= gpt.prompt %></pre>
                    </td>
                    <td>
                        <pre><%= gpt.answer %></pre>
                    </td>
                    <td>
                        <a href="/gpt/remove/<%=gpt._id %>">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
                <% }) %>
        </tbody>
    </table>
</div>